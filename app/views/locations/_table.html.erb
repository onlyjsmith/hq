<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Details (edit/delete)</th>
    </tr>
  </thead>
  <tbody>
    <% @locations.each do |location| %>
    <tr>
      <td>
        <%= link_to location.name, edit_location_path(location) %>
      </td>
      <td>
        <%= link_to "Details", edit_location_path(location), :class => "btn btn-mini btn-warning" %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>

<div class='container'>
  <h1><%= @tribe.name %></h1>

  <p>
    <%= link_to species_path(@tribe.species) do %>
      <%= @tribe.species.common_name %>
      <em>(<%= @tribe.species.binomial %>)</em>
    <% end %>
    lives at <%= link_to @tribe.location.name, location_path(@tribe.location.id) %>
  </p>
  <div class="row">
    <div class="span3">
      <h3>Little picture</h3>
      <%= link_to image_tag(@tribe.species.get_photo_url, :title => "First picture we could find of #{@tribe.species.common_name}", 
        :class => "photo"), species_path(@tribe.species) 
      %>
    </div>
    <div class="span9">
      <h3>Sightings</h3>
      <%= render :partial => 'sightings/table'%>
    </div>
  </div>

  <div class="row">
    <div class="span12">
      <div id="map_canvas" style="height: 400px; width: 600px">
        <h3>Mappy of where this tribe lives</h3>
      </div>
    </div>
  </div>

  
  
  <%= link_to "Edit this", edit_species_tribe_path(@tribe.species, @tribe) %> |
  <%= link_to "All tribes", tribes_path %>  
</div>

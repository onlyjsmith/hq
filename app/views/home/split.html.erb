<!-- TODO: remove inline styling -->
<div class='container' style="padding-top:40px">
  <div class="row">
    <div class="span6">
      <h1>Results</h1>
    </div>
    <div class="span6">
      <h1>Filters</h1>
      <%= form_tag sightings_path, :method => 'post' do %>
        <%= label_tag :species %>
        <%= text_field_tag :species, params[:species] %>

        <%= label_tag :tribe %>
        <%= text_field_tag :tribe, params[:tribe] %>

        <%= label_tag :camp %>
        <%= text_field_tag :camp, params[:camp] %>

        <%= label_tag :location %>
        <%= text_field_tag :location, params[:location] %>

        <%= label_tag :time %>
        <%= text_field_tag :time, params[:time] %>

        <%= hidden_field_tag(:species_id) %>
        <%= hidden_field_tag(:tribe_id) %>
        <%= hidden_field_tag(:camp_id) %>
        <%= hidden_field_tag(:location_id) %>
        <%= hidden_field_tag(:time_id) %>
        
        <%= label_tag %>
        <%= submit_tag "Search" %>
      <% end %>
      
    </div>
  </div>
</div>
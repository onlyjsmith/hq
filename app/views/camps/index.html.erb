<div class="container">
  <div class="page-header">
    <div class="row">
      <div class="span9">
        <!-- TODO: Nest this properly. Following is example of what not to do -->
        <h1>Camps for <%= link_to "#{@company.name} Company", company_path(@company) %></h1>
      </div>
      <div class="span3">
        <%= link_to "Add new one", new_company_camp_path, :class => 'btn btn-success' %>
      </div>
    </div>
  </div>
  <div class="row">
    <div id="stats" class="span12">
      <h2>Headline Company Stats</h2>
      <ul>
        <li><%= pluralize(@company.camps.count, 'camp') %></li>
        <li><%= pluralize(@sightings.count, 'sighting') %> since <%= @sightings.first.try(:record_time) %></li>
        <li>Most recent sighting was <%= @sightings.last.species.common_name %> at <%= link_to @sightings.last.camp.name, company_camps_path(@sightings.last) %></li>
      </ul>
    </div>
  </div>
  <div class="row">
    <div class="span9">
      <%= render :partial => 'table' %>
    </div>
  </div>
</div>


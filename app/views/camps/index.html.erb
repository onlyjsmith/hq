<div class="container">
  <div class="page-header">
    <div class="row">
      <div class="span9">
        <!-- TODO: Nest this properly. Following is example of what not to do -->
        <h1>Summary of Camps for <%= link_to "#{@company.name} Company", company_path(@company) %></h1>
      </div>
      <div class="span3">
        <%= link_to "Add new one", new_company_path, :class => 'btn btn-success' %>
      </div>
    </div>
  </div>
  <div class="row">
    <div id="stats" class="span12">
      <h2>Headline Company Stats</h2>
      <ul>
        <li><%= pluralize(@company.camps.count, 'camp') %></li>
        <li><%= pluralize(@sightings.count, 'sighting') %> since <%= @sightings.first.try(:record_time) %></li>
        <li>
          Most recent sighting was <%= @sightings.last.species.common_name %> at 
          <%= link_to @sightings.last.camp.name, camp_path(@sightings.last.camp) %>
          <%= link_to "(View sightings detail)", sighting_path(@sightings.last) %>
        </li>
        <!-- TODO: Add controller/model code to calculate camp with most sightings, etc -->
        <li>Most sightings recorded at XX </li>
      </ul>
    </div>
  </div>
  <div class="row">
    <div class="span9">
      <%= render :partial => 'table' %>
    </div>
  </div>
</div>


<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>Common Name</th>
      <th>Binomial</th>
      <th>Image</th>                                    
      <th>Details / Edit</th>
      <th>Family groups / Tribes</th>
      <th># of Sightings</th>
    </tr>
  </thead>
  <tbody>
    <% @species.each do |species| %>
    <tr>
      <td>
        <%= link_to species.common_name, species_path(species) %>
      </td>
      <td>
        <%= species.binomial %>
      </td>
      <td>
        <% unless species.photos.count == 0 %>
          <%= link_to image_tag(species.get_photo_url, :title => "First picture we could find of #{species.common_name}", 
            :class => "box-shadow species photo small_photo"), species_path(species) 
          %>
        <% end %>
      </td>
      <td>
        <%= link_to "Details", edit_species_path(species), :class => "btn btn-mini btn-warning" %>
      </td>
      <td>
        <%= link_to "Add new", new_species_tribe_path(species), :class => "btn btn-mini btn-success" %>
        <% unless species.tribes.blank? %>
          <%= link_to "Existing tribes", species_tribes_path(species), :class => "btn btn-mini btn-warning" %>
        <% end %>
      </td>
      <td>
        <%= species.sightings.count %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>

<%= simple_form_for @sighting do |f| -%>
  <%= f.input :species_id, :collection => @species %>
  <%= f.text_field :tribe %>
  <%= f.text_field :location %>
  <%= f.text_field :drive %>
  <%= f.text_field :description %>
  <%= f.text_field :user_id %>
  <%= f.text_field :submission_point %>
  <%= f.text_field :record_time %>
  <%= f.text_field :time_window_hr %>
  <%= f.text_field :camp_id %>
  <%= f.submit "Save", :disable_with => 'Saving...' %>
<% end -%>       

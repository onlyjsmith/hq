<div class="container"> <!-- sightings_book"> -->
  <div class="page-header">
    <div class="row">
      <div class="span9">
        <h1>All Sightings</h1>
      </div>
      <div class="span3">
        <%= link_to "Add new sighting", new_sighting_path, :class => 'btn btn-success' %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="span9">
      <h1 id="results">Results</h1>
      <%= render :partial => 'table' %>
    </div>
    <div class="span3">
      <h1 id="filters">Filters</h1>
      <%= search_form_for @q do |f| %>
        <%= f.label :description_cont %>
        <%= f.text_field :description_cont %>
        
        <%= f.label :species_common_name_cont, "Species Common Name contains" %>
        <%= f.text_field :species_common_name_cont, 'data-autocomplete' => "sightings/autocomplete_species_common_name", 
          :class => :autocomplete %>
        
        <%= f.label :species_binomial_cont, "Species Binomial contains" %>
        <%= f.text_field :species_binomial_cont %>

        <%= f.label :tribe_name_cont, "Tribe Name contains" %>
        <%= f.text_field :tribe_name_cont, 'data-autocomplete' => "sightings/autocomplete_tribe_name", 
          :class => :autocomplete  %>
        
        <%= f.label :camp_name_cont, "Camp Name contains" %>
        <%= f.text_field :camp_name_cont %>
        
        <%= f.label :location_name_cont, "Location Name contains" %>
        <%= f.text_field :location_name_cont %>
        
        <%= f.submit %>
        <%= link_to "Reset", sightings_path %>
      <% end %>
    </div>
  </div>
</div>  


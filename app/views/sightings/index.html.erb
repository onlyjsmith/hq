<div class="navbar">
  <!-- Nothing but space up here. Nasty -->
</div>

<div class="container sightings_book">
  <div class="page-header">
    <h1>Sightings for <%= @camp.name %></h1>
  </div>
  <div class="row">
    <div class="span12">
      <div class="row">
        <div class="span6">
          <div class="btn-group" data-toggle="buttons-radio">
            <a class="btn" href="#">Today</a>
            <a class="btn" href="#">7 days</a>
            <a class="btn" href="#">30 days</a>
            <a class="btn" href="#">Year</a>
            <a class="btn" href="#">Custom</a>
          </div>
        </div>
        <div class="span3">
          <h6>10 Feb to 10 March 2012</h6>
        </div>
        <div class="span3">
          <!-- <i class="icon-plus-sign"></i> -->
          <a href="#" class="btn btn-success">+ Add new sighting</a>
        </div>
      </div>
    </div>
  </div>  
  
  <div class="row">
    <div class="span12">
      <div class="row">
        <div class="span6">
          <h2>Map</h2>
          <div id="map-sightings-index" style="height: 250px; border: 1px solid">
            <!-- <p>Wow - what an interesting map</p> -->
          </div>
        </div>
        <div class="span6">
          <div class="row">
            <div class="span3">
              <h2>Stats</h2>
              <h3><%= @drive_count %> drives (550km, 34hrs)</h3>
              <h3><%= @sightings.count %> sightings (19 rare)</h3>
            </div>
            <div class="span3">
              <h2>Chart</h2>
              <p>A great place for a chart. If only we had one...</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="span12">
      <h2>Entries</h2>
      <table class="table table-bordered table-striped">
        <thead>
          <tr>
            <th>Entry</th>
            <th>Details (edit/delete)</th>
          </tr>
        </thead>
        <tbody>
          <% @sightings.each do |s| %>
          <tr>
            <td>
              <a href="#"><%= @user %></a> reported
              <a href='#'><%= s.species.common_name %></a> from
              <a href='#'><%= s.tribe.try(:name) || "no tribe" %></a> near
              <a href='#'><%= s.location.name %></a> about 
              <a href='#'><%= distance_of_time_in_words(Time.now, s.record_time) %></a> ago
            </td>
            <td><a href="#" class="btn btn-mini btn-warning">Details</a></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>  


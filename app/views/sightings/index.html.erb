<div class="navbar">
  <!-- Nothing but space up here. Nasty -->
</div>

<div class="container sightings_book">
  <div class="page-header">
    <h1>Sightings for <%= @camp.name %></h1>
  </div>
  <div class="row">
    <div class="span12">
      <div class="row">
        <div class="span6">
          <div class="btn-group" data-toggle="buttons-radio">
            <%= link_to "Today", "sightings.json", :remote => true, :class => 'btn' %>
            <%= link_to "7 days", "sightings.json", :remote => true, :class => 'btn' %>
            <%= link_to "30 days", "sightings.json", :remote => true, :class => 'btn' %>
            <%= link_to "Year", "sightings.json", :remote => true, :class => 'btn' %>
            <%= link_to "Custom", "sightings.json", :remote => true, :class => 'btn' %>
          </div>
        </div>
        <div class="span3">
          <h6>10 Feb to 10 March 2012</h6>
        </div>
        <div class="span3">
          <!-- <i class="icon-plus-sign"></i> -->
          <a href="#" class="btn btn-success">+ Add new sighting</a>
        </div>
      </div>
    </div>
  </div>  
  
  <div class="row">
    <div class="span12">
      <div class="row">
        <div class="span6">
          <h2>Map</h2>
          <div id="map-sightings-index" style="height: 250px; border: 1px solid">
            <!-- <p>Wow - what an interesting map</p> -->
          </div>
        </div>
        <div class="span6">
          <div class="row">
            <div class="span3">
              <h2>Stats</h2>
              <h3><%= @drive_count %> drives (550km, 34hrs)</h3>
              <h3><%= @sightings.count %> sightings (19 rare)</h3>
            </div>
            <div class="span3">
              <h2>Chart</h2>
              <p>A great place for a chart. If only we had one...</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="span12">
      <h2>Entries</h2>
      <%= render :partial => 'entry_table' %>
    </div>
  </div>
</div>  


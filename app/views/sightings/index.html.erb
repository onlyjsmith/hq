<div class="navbar">
  <!-- Nothing but space up here. Nasty -->
</div>

<div class="container sightings_book">
  <div class="page-header">
    <h1>Sightings for <%= @camp_name %></h1>
  </div>
  <div class="row">
    <div class="span8">
      <div class="btn-group">
        <a class="btn" href="#">Today</a>
        <a class="btn" href="#">7 days</a>
        <a class="btn" href="#">30 days</a>
        <a class="btn" href="#">Year</a>
        <a class="btn" href="#">Custom</a>
      </div>
    </div>
    <div class="span4">
      <!-- <i class="icon-plus-sign"></i> -->
      <a href="#" class="btn">+ Add new sighting</a>
    </div>
  </div>  
  
  <div class="row">
    <div class="span12">
      <div class="row">
        <div class="span6">
          <h2>Map</h2>
          <div style="height: 100px; border: 1px solid">
            <p>Wow - what an interesting map</p>
          </div>
        </div>
        <div class="span6">
          <div class="row">
            <div class="span3">
              <h2>Stats</h2>
              <h3>18 drives (550km, 34hrs)</h3>
              <h3>96 sightings (19 rare)</h3>
            </div>
            <div class="span3">
              <h2>Chart</h2>
              <p>Great place for a chart</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="span12">
      <h2>Entries</h2>
      <table class="table table-bordered table-striped">
        <thead>
          <tr>
            <th>Entry</th>
            <th>Details (edit/delete)</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td>Three lions from Duma tribe, near Old Tree yesterday</td>
            <td><a href="#">Details ></a></td>
          </tr>
          <tr>
            <td>Dead rabbit under a tyre</td>
            <td><a href="#">Details ></a></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>  

